# Harmony Design System - Environment Configuration Example
# Copy this file to .env, .env.local, or .env.{environment} and customize

# Environment type (development, test, production)
NODE_ENV=development

# API Configuration
API_URL=http://localhost:3000
VITE_API_URL=http://localhost:3000
WS_URL=ws://localhost:3000
VITE_WS_URL=ws://localhost:3000

# Debug Settings
DEBUG=true
VITE_DEBUG=true
LOG_LEVEL=debug
VITE_LOG_LEVEL=debug

# Feature Flags
ENABLE_ANALYTICS=false
VITE_ENABLE_ANALYTICS=false
ENABLE_EXPERIMENTS=true
VITE_ENABLE_EXPERIMENTS=true

# Audio Configuration
AUDIO_BUFFER_SIZE=128
VITE_AUDIO_BUFFER_SIZE=128
AUDIO_SAMPLE_RATE=48000
VITE_AUDIO_SAMPLE_RATE=48000
MAX_POLYPHONY=32
VITE_MAX_POLYPHONY=32

# Performance Settings
WASM_MEMORY_PAGES=256
VITE_WASM_MEMORY_PAGES=256
ENABLE_GPU=true
VITE_ENABLE_GPU=true