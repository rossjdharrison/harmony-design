# Harmony Design System - Development Environment Configuration
# This file contains development-specific defaults
# DO NOT commit sensitive values - use .env.local for secrets

# ============================================================================
# CORE ENVIRONMENT
# ============================================================================
NODE_ENV=development
HARMONY_ENV=development

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable all debugging features in development
ENABLE_EXPERIMENTS=true
ENABLE_DEBUG_TOOLS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_EVENT_BUS_DEBUGGER=true
ENABLE_COMPONENT_INSPECTOR=true

# ============================================================================
# API CONFIGURATION
# ============================================================================
# Local development API endpoints
API_BASE_URL=http://localhost:3000
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# ============================================================================
# LOGGING
# ============================================================================
# Verbose logging for development
LOG_LEVEL=debug
ENABLE_CONSOLE_LOGS=true
ENABLE_ERROR_REPORTING=false

# ============================================================================
# PERFORMANCE BUDGETS (Development - Relaxed)
# ============================================================================
# These are monitored but not enforced in development
RENDER_BUDGET_MS=16
MEMORY_BUDGET_MB=50
LOAD_BUDGET_MS=200
AUDIO_LATENCY_BUDGET_MS=10

# ============================================================================
# AUDIO ENGINE
# ============================================================================
# Development audio settings
AUDIO_SAMPLE_RATE=48000
AUDIO_BUFFER_SIZE=256
AUDIO_ENABLE_GPU=true
AUDIO_ENABLE_WASM=true

# ============================================================================
# STORAGE
# ============================================================================
# IndexedDB settings for local development
INDEXEDDB_NAME=harmony-design-dev
INDEXEDDB_VERSION=1
ENABLE_STORAGE_PERSISTENCE=true

# ============================================================================
# EXPERIMENTS & A/B TESTING
# ============================================================================
# Development experiment configuration
EXPERIMENT_STORAGE_KEY=harmony-experiments-dev
EXPERIMENT_FORCE_VARIANT=
EXPERIMENT_DEBUG_MODE=true

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
# Hot reload and dev server settings
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
ENABLE_STORYBOOK=true

# ============================================================================
# SECURITY
# ============================================================================
# Relaxed CORS for local development
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:*,http://127.0.0.1:*

# ============================================================================
# GRAPH ENGINE
# ============================================================================
# Graph database settings for development
GRAPH_MAX_NODES=10000
GRAPH_MAX_EDGES=50000
GRAPH_ENABLE_INDEXING=true

# ============================================================================
# WASM CONFIGURATION
# ============================================================================
# WebAssembly module paths (development build)
WASM_PATH=/harmony-core/pkg
WASM_ENABLE_THREADS=true
WASM_MEMORY_PAGES=1024

# ============================================================================
# ANALYTICS
# ============================================================================
# Disable analytics in development
ENABLE_ANALYTICS=false
ANALYTICS_ENDPOINT=

# ============================================================================
# ERROR BOUNDARIES
# ============================================================================
# Show detailed error information in development
ENABLE_ERROR_OVERLAY=true
ERROR_DISPLAY_MODE=detailed

# ============================================================================
# COMPONENT DEVELOPMENT
# ============================================================================
# Component testing and development settings
COMPONENT_ISOLATION_MODE=false
ENABLE_PROP_VALIDATION=true
ENABLE_ACCESSIBILITY_CHECKS=true

# ============================================================================
# BUILD CONFIGURATION
# ============================================================================
# Development build settings
BUILD_MODE=development
ENABLE_MINIFICATION=false
ENABLE_TREE_SHAKING=false
ENABLE_CODE_SPLITTING=true

# ============================================================================
# PREVIEW DEPLOYMENTS
# ============================================================================
# Set by CI/CD for preview builds
PREVIEW_DEPLOYMENT=false
PREVIEW_URL=