{
  "id": "example-audio-reverb",
  "name": "Example Reverb Plugin",
  "version": "1.0.0",
  "description": "A simple reverb audio effect plugin demonstrating the Harmony plugin system",
  "author": {
    "name": "Harmony Team",
    "email": "team@harmonydesignsystem.com",
    "url": "https://harmonydesignsystem.com"
  },
  "license": "MIT",
  "entry": "plugin.js",
  "icon": "icon.svg",
  "category": "audio-effect",
  "tags": ["reverb", "audio", "effect", "spatial"],
  "permissions": [
    "audio.read",
    "audio.write",
    "audio.process",
    "ui.render",
    "events.subscribe",
    "events.publish"
  ],
  "engines": {
    "harmony": ">=1.0.0"
  },
  "capabilities": {
    "audioProcessing": {
      "inputChannels": 2,
      "outputChannels": 2,
      "latency": 5,
      "supportsGPU": true
    },
    "ui": {
      "width": 400,
      "height": 300,
      "resizable": true,
      "darkMode": true
    }
  },
  "configuration": {
    "parameters": [
      {
        "id": "roomSize",
        "name": "Room Size",
        "type": "number",
        "defaultValue": 0.5,
        "min": 0,
        "max": 1,
        "step": 0.01,
        "description": "Size of the simulated room"
      },
      {
        "id": "damping",
        "name": "Damping",
        "type": "number",
        "defaultValue": 0.5,
        "min": 0,
        "max": 1,
        "step": 0.01,
        "description": "High frequency damping amount"
      },
      {
        "id": "wetDry",
        "name": "Wet/Dry Mix",
        "type": "number",
        "defaultValue": 0.3,
        "min": 0,
        "max": 1,
        "step": 0.01,
        "description": "Balance between processed and original signal"
      },
      {
        "id": "enabled",
        "name": "Enabled",
        "type": "boolean",
        "defaultValue": true,
        "description": "Enable or disable the effect"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/harmony-design/example-reverb"
  },
  "homepage": "https://harmonydesignsystem.com/plugins/reverb",
  "keywords": ["reverb", "audio", "effect", "dsp", "spatial-audio"]
}