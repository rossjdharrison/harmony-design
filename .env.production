# Production Environment Configuration
# This file contains production-specific overrides
# DO NOT commit sensitive values - use environment variables or secrets management

# Environment
NODE_ENV=production
HARMONY_ENV=production

# API Configuration
API_BASE_URL=https://api.harmony.design
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Feature Flags
ENABLE_DEBUG_TOOLS=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
ENABLE_ANALYTICS=true
ENABLE_EXPERIMENTS=true

# Performance Budgets (Enforced)
RENDER_BUDGET_MS=16
MEMORY_BUDGET_MB=50
LOAD_BUDGET_MS=200
AUDIO_LATENCY_MS=10

# Logging
LOG_LEVEL=error
LOG_TO_CONSOLE=false
LOG_TO_SERVICE=true

# Event Bus
EVENT_BUS_DEBUG=false
EVENT_BUS_LOG_EVENTS=false
EVENT_BUS_VALIDATE_PAYLOADS=true

# Audio Engine
AUDIO_BUFFER_SIZE=256
AUDIO_SAMPLE_RATE=48000
AUDIO_USE_WORKLET=true
AUDIO_USE_GPU=true

# Storage
STORAGE_TYPE=indexeddb
STORAGE_QUOTA_MB=500
ENABLE_CLOUD_SYNC=true

# Build Configuration
SOURCE_MAPS=false
MINIFY=true
TREE_SHAKE=true
CODE_SPLITTING=true

# Security
ENABLE_CSP=true
ENABLE_CORS=true
ALLOWED_ORIGINS=https://harmony.design,https://www.harmony.design

# CDN Configuration
CDN_BASE_URL=https://cdn.harmony.design
USE_CDN=true

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Analytics
ANALYTICS_ID=
ANALYTICS_SAMPLE_RATE=1.0

# Experiments
EXPERIMENT_SERVICE_URL=https://experiments.harmony.design
EXPERIMENT_CACHE_TTL=3600000