# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript, TypeScript, JSON
[*.{js,mjs,cjs,ts,json}]
indent_size = 2
max_line_length = 100

# HTML, CSS
[*.{html,css}]
indent_size = 2
max_line_length = 100

# Markdown
[*.md]
max_line_length = 80
trim_trailing_whitespace = false

# YAML
[*.{yml,yaml}]
indent_size = 2

# Rust
[*.rs]
indent_size = 4
max_line_length = 100

# Makefiles require tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Package.json (specific formatting)
[package.json]
indent_size = 2