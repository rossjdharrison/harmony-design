{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://harmonydesignsystem.com/schemas/graph-code.json",
  "title": "Graph Code Storage Schema",
  "description": "Schema for storing JavaScript code in graph nodes",
  "type": "object",
  "properties": {
    "modules": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "$ref": "#/definitions/ESModuleCode"
        }
      }
    },
    "properties": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "$ref": "#/definitions/CodeProperty"
        }
      }
    },
    "computed": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "$ref": "#/definitions/ComputedExpression"
        }
      }
    },
    "metadata": {
      "$ref": "#/definitions/CodeMetadata"
    }
  },
  "required": ["metadata"],
  "definitions": {
    "ESModuleCode": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "es-module"
        },
        "source": {
          "type": "string",
          "minLength": 1
        },
        "exports": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "imports": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ImportSpec"
          }
        },
        "hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      },
      "required": ["type", "source", "exports", "imports", "hash"]
    },
    "ImportSpec": {
      "type": "object",
      "properties": {
        "specifier": {
          "type": "string"
        },
        "imports": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "default": {
          "type": "string"
        }
      },
      "required": ["specifier", "imports"]
    },
    "CodeProperty": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "code-property"
        },
        "body": {
          "type": "string",
          "minLength": 1
        },
        "params": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ParamSpec"
          }
        },
        "returnType": {
          "type": "string"
        },
        "async": {
          "type": "boolean"
        },
        "pure": {
          "type": "boolean"
        }
      },
      "required": ["type", "body", "params", "returnType", "async", "pure"]
    },
    "ParamSpec": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "optional": {
          "type": "boolean"
        },
        "default": {}
      },
      "required": ["name", "type", "optional"]
    },
    "ComputedExpression": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "computed-expression"
        },
        "expression": {
          "type": "string",
          "minLength": 1
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cached": {
          "type": "boolean"
        },
        "debounce": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": ["type", "expression", "dependencies", "cached"]
    },
    "CodeMetadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "compiled": {
          "type": "string",
          "format": "date-time"
        },
        "errors": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CodeError"
          }
        }
      },
      "required": ["version"]
    },
    "CodeError": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        },
        "line": {
          "type": "integer",
          "minimum": 1
        },
        "column": {
          "type": "integer",
          "minimum": 1
        },
        "severity": {
          "type": "string",
          "enum": ["error", "warning", "info"]
        }
      },
      "required": ["message", "severity"]
    }
  }
}