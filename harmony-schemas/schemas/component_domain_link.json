{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://harmonydesignsystem.com/schemas/component_domain_link.json",
  "title": "ComponentDomainLink",
  "description": "Link between a component and domain types it renders",
  "type": "object",
  "properties": {
    "component_id": {
      "type": "string",
      "description": "ID of the component (e.g., 'TrackCard', 'WaveformDisplay')"
    },
    "domain_type": {
      "type": "string",
      "description": "Domain type rendered by this component (e.g., 'Track', 'Project', 'AudioBuffer')"
    },
    "binding_mode": {
      "type": "string",
      "enum": ["primary", "reference", "collection"],
      "description": "How the domain type is bound: primary (main entity), reference (related entity), collection (list of entities)"
    },
    "props_mapping": {
      "type": "object",
      "description": "Mapping from component props to domain type fields",
      "additionalProperties": {
        "type": "string"
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "notes": {
          "type": "string"
        }
      }
    }
  },
  "required": ["component_id", "domain_type", "binding_mode"],
  "additionalProperties": false
}