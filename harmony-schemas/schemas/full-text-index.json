{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://harmonydesign.systems/schemas/full-text-index.json",
  "title": "FullTextIndex",
  "description": "Full-text search index for node properties with tokenization and ranking",
  "type": "object",
  "properties": {
    "indexId": {
      "type": "string",
      "description": "Unique identifier for the index"
    },
    "propertyName": {
      "type": "string",
      "description": "Name of the node property to index"
    },
    "tokenizer": {
      "type": "string",
      "enum": ["whitespace", "alphanumeric", "ngram"],
      "default": "alphanumeric",
      "description": "Tokenization strategy"
    },
    "caseSensitive": {
      "type": "boolean",
      "default": false,
      "description": "Whether search is case-sensitive"
    },
    "minTokenLength": {
      "type": "integer",
      "minimum": 1,
      "default": 2,
      "description": "Minimum token length to index"
    },
    "maxResults": {
      "type": "integer",
      "minimum": 1,
      "default": 100,
      "description": "Maximum number of search results"
    }
  },
  "required": ["indexId", "propertyName"]
}