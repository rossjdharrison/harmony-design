{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://harmonydesignsystem.com/schemas/plugin-manifest.schema.json",
  "title": "Harmony Plugin Manifest",
  "description": "JSON Schema for Harmony Design System plugin.json manifest files",
  "type": "object",
  "required": ["id", "name", "version", "entry"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "minLength": 3,
      "maxLength": 64,
      "description": "Unique plugin identifier (lowercase alphanumeric with hyphens)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "description": "Human-readable plugin name"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-z0-9.-]+)?(\\+[a-z0-9.-]+)?$",
      "description": "Semantic version (e.g., 1.0.0, 2.1.3-beta.1)"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Brief description of plugin functionality"
    },
    "author": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128,
          "description": "Author name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Author email address"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Author website URL"
        }
      },
      "additionalProperties": false
    },
    "license": {
      "type": "string",
      "maxLength": 64,
      "description": "SPDX license identifier (e.g., MIT, Apache-2.0)"
    },
    "entry": {
      "type": "string",
      "pattern": "^[^/].*\\.js$",
      "description": "Main JavaScript entry point (relative path)"
    },
    "icon": {
      "type": "string",
      "pattern": "^[^/].*\\.(svg|png|jpg|jpeg)$",
      "description": "Plugin icon file path (relative path, SVG preferred)"
    },
    "category": {
      "type": "string",
      "enum": [
        "audio-effect",
        "audio-generator",
        "audio-analyzer",
        "ui-component",
        "workflow-tool",
        "visualization",
        "utility",
        "integration"
      ],
      "description": "Plugin category for organization and discovery"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$",
        "minLength": 2,
        "maxLength": 32
      },
      "maxItems": 10,
      "uniqueItems": true,
      "description": "Searchable tags (lowercase alphanumeric with hyphens)"
    },
    "permissions": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "audio.read",
          "audio.write",
          "audio.process",
          "storage.read",
          "storage.write",
          "network.fetch",
          "network.websocket",
          "ui.render",
          "ui.overlay",
          "events.subscribe",
          "events.publish",
          "gpu.compute",
          "midi.input",
          "midi.output"
        ]
      },
      "uniqueItems": true,
      "description": "Required permissions for plugin operation"
    },
    "dependencies": {
      "type": "object",
      "patternProperties": {
        "^[a-z0-9-]+$": {
          "type": "string",
          "pattern": "^(\\^|~)?\\d+\\.\\d+\\.\\d+$",
          "description": "Plugin dependency with version constraint"
        }
      },
      "additionalProperties": false,
      "description": "Other plugins this plugin depends on"
    },
    "engines": {
      "type": "object",
      "properties": {
        "harmony": {
          "type": "string",
          "pattern": "^(>=|>|<=|<|\\^|~)?\\d+\\.\\d+\\.\\d+$",
          "description": "Compatible Harmony Design System version"
        }
      },
      "additionalProperties": false
    },
    "capabilities": {
      "type": "object",
      "properties": {
        "audioProcessing": {
          "type": "object",
          "properties": {
            "inputChannels": {
              "type": "integer",
              "minimum": 0,
              "maximum": 32,
              "description": "Number of audio input channels"
            },
            "outputChannels": {
              "type": "integer",
              "minimum": 0,
              "maximum": 32,
              "description": "Number of audio output channels"
            },
            "latency": {
              "type": "number",
              "minimum": 0,
              "maximum": 1000,
              "description": "Processing latency in milliseconds"
            },
            "supportsGPU": {
              "type": "boolean",
              "description": "Whether plugin supports GPU acceleration"
            }
          },
          "additionalProperties": false
        },
        "ui": {
          "type": "object",
          "properties": {
            "width": {
              "type": "integer",
              "minimum": 100,
              "maximum": 4096,
              "description": "Default UI width in pixels"
            },
            "height": {
              "type": "integer",
              "minimum": 100,
              "maximum": 4096,
              "description": "Default UI height in pixels"
            },
            "resizable": {
              "type": "boolean",
              "description": "Whether UI can be resized"
            },
            "darkMode": {
              "type": "boolean",
              "description": "Whether plugin supports dark mode"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "configuration": {
      "type": "object",
      "properties": {
        "parameters": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "name", "type"],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[a-zA-Z0-9_]+$",
                "description": "Parameter identifier"
              },
              "name": {
                "type": "string",
                "minLength": 1,
                "maxLength": 64,
                "description": "Human-readable parameter name"
              },
              "type": {
                "type": "string",
                "enum": ["number", "boolean", "string", "enum", "color"],
                "description": "Parameter data type"
              },
              "defaultValue": {
                "description": "Default parameter value"
              },
              "min": {
                "type": "number",
                "description": "Minimum value (for number type)"
              },
              "max": {
                "type": "number",
                "description": "Maximum value (for number type)"
              },
              "step": {
                "type": "number",
                "description": "Step increment (for number type)"
              },
              "options": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Available options (for enum type)"
              },
              "description": {
                "type": "string",
                "maxLength": 256,
                "description": "Parameter description"
              }
            },
            "additionalProperties": false
          },
          "description": "Configurable plugin parameters"
        }
      },
      "additionalProperties": false
    },
    "repository": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["git", "svn", "hg"],
          "description": "Repository type"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Repository URL"
        }
      },
      "additionalProperties": false
    },
    "bugs": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Bug tracker URL"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Bug report email"
        }
      },
      "additionalProperties": false
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Plugin homepage URL"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 32
      },
      "maxItems": 20,
      "uniqueItems": true,
      "description": "Keywords for search and discovery"
    }
  },
  "additionalProperties": false
}