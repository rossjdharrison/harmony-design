# Staging Environment Configuration
# This file contains overrides for the staging environment
# Staging mirrors production configuration but with debugging enabled

# Environment
NODE_ENV=staging
ENVIRONMENT=staging

# API Configuration
API_URL=https://staging-api.harmonydesign.dev
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Feature Flags
ENABLE_EXPERIMENTS=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_TOOLS=true
ENABLE_PERFORMANCE_MONITORING=true

# Logging
LOG_LEVEL=debug
LOG_TO_CONSOLE=true
LOG_TO_SERVER=true
LOG_SERVER_URL=https://staging-logs.harmonydesign.dev

# Audio Configuration
AUDIO_BUFFER_SIZE=256
AUDIO_SAMPLE_RATE=48000
AUDIO_LATENCY_TARGET=10

# Performance Budgets (same as production)
MAX_RENDER_TIME_MS=16
MAX_MEMORY_MB=50
MAX_LOAD_TIME_MS=200

# WASM Configuration
WASM_HEAP_SIZE=52428800
WASM_ENABLE_SIMD=true
WASM_ENABLE_THREADS=true

# WebGPU Configuration
ENABLE_WEBGPU=true
WEBGPU_FALLBACK_TO_WASM=true

# Storage
INDEXEDDB_NAME=harmony-staging
INDEXEDDB_VERSION=1
ENABLE_PERSISTENCE=true

# Analytics & Monitoring
ANALYTICS_ENDPOINT=https://staging-analytics.harmonydesign.dev
SENTRY_DSN=
SENTRY_ENVIRONMENT=staging
SENTRY_SAMPLE_RATE=1.0

# Experiment Configuration
EXPERIMENT_REFRESH_INTERVAL=60000
EXPERIMENT_CACHE_TTL=300000

# Security
ENABLE_CORS=true
ALLOWED_ORIGINS=https://staging.harmonydesign.dev,https://staging-preview.harmonydesign.dev

# Preview Deployments
ENABLE_PREVIEW_MODE=true
PREVIEW_BANNER=true

# Debug Features (enabled in staging)
ENABLE_EVENT_BUS_DEBUGGER=true
ENABLE_PERFORMANCE_PANEL=true
ENABLE_STATE_INSPECTOR=true
ENABLE_GRAPH_VISUALIZER=true

# Testing
ENABLE_TEST_HELPERS=true
MOCK_EXTERNAL_APIS=false